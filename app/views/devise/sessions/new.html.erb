<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <header>
          <h1 class="text-center login-title ion-log-in">Cue Hunt</h1>
        </header>
        <img class="profile-img" src="#" alt="">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-signin'}) do |f| %>
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %><br/>
          <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password", required: true %>
          <label class="checkbox pull-left">
            <%= f.check_box :remember_me %>
              Remember me
          </label>
          <%= render "devise/shared/links" %>

          <!--<a href="forgotpassword.html" class="forgot-password">Forgot Password</a>-->
          <%= f.submit 'Sign In', class: "btn btn-lg btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

